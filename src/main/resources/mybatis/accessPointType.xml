<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.syzc.sseip.dao.AccessPointTypeDao">
    <resultMap id="AccessPointType" type="com.syzc.sseip.entity.AccessPointType">
        <id column="id" property="id"/>
    </resultMap>
    <insert id="add" useGeneratedKeys="true" keyProperty="entity.id">
        INSERT INTO access_point_type (`name`) VALUE (#{entity.name});
    </insert>
    <delete id="remove" parameterType="Long">
        delete from access_point_type WHERE id=#{id}
    </delete>
    <update id="update">
        UPDATE access_point_type
        SET `name` =
        <choose>
            <when test="entity.name!=null and entity.name!=''">#{entity.name}</when>
            <otherwise>NULL</otherwise>
        </choose>
        WHERE id = #{entity.id}
    </update>
    <select id="get" parameterType="Long" resultMap="AccessPointType">
SELECT
  id,
  `name`
FROM access_point_type
WHERE id = #{id}
    </select>
    <select id="exist" parameterType="Long" resultType="Boolean">
SELECT
  count(1)>0
FROM access_point_type
WHERE id = #{id}
    </select>
    <select id="existName" parameterType="String" resultType="Boolean">
SELECT
  count(1)>0
FROM access_point_type
WHERE `name` = #{name}
    </select>
    <select id="list" resultMap="AccessPointType">
SELECT
  id,
  `name`
FROM access_point_type
ORDER BY `name`
LIMIT #{offset}, #{size}
    </select>
    <select id="count" resultType="Long">
SELECT
  count(1)
FROM access_point_type
    </select>
</mapper>